<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="tribuna.content">
<body>
<metal:block fill-slot="style_slot">

</metal:block>

<metal:main fill-slot="main">
<tal:main-macro metal:define-macro="main"
                tal:define="ploneview nocall:context/@@plone">

  <div id="article" class="row-fluid">
    <div id="left-column" class="span2">
      <div id="selected-tags">
        <div class="unstyled" id="selected-tags-list">
          <span tal:repeat="tag context/subject"
                class="selected">${tag}</span>
        </div>
      </div>
    </div>

    <div class="articles-article-body span6">
      <img tal:attributes="src string:++theme++tribuna.diazotheme/img/blank.gif" />
      <p class="fit-text">
        <span class="comment-text"
              tal:content="structure context/getText">Comment</span>
      </p>
      <a class="content-link" href="#"
         i18n:translate=""
         tal:attributes="href context/absolute_url">link to the article</a>
      <div id="comment-info">
        <span tal:define="creator context/Creator;
                     mtool context/@@plone_tools/membership;
                     author python:mtool.getMemberInfo(creator)"
               tal:content="python:author and author['fullname'] or creator">
          Author name
        </span>
        <span tal:define="DateTime python:modules['DateTime'].DateTime;"
              tal:replace="python:context.toLocalizedTime(context.modification_date)" />
      </div>
      <div class="red" i18n:translate="">comment</div>
    </div>
  </div>

</tal:main-macro>
</metal:main>

</body>
</html>
